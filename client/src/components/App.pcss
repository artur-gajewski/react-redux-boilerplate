:global {
  @import "../../node_modules/normalize.css/normalize.css";

  html {
    margin: 0;
    padding: 0;
    font-size: 20px;

    @media (screen and min-width: 800px) {
      font-size: 25px;
    }

    font-family: "Comic Sans MS";
    min-height: 100vh;

    background-image: linear-gradient(
        35deg,
        rgba(0, 0, 255, 0.8),
        rgba(255, 0, 0, 0.9)
      ),
      url("../assets/money.jpg");
  }

  body {
    padding: 2em;
  }
}
